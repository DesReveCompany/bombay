- title "#{t(:app_name)} - #{t(:signup)}"

#box
  #block-signup.block
    %h2
      = "#{t(:app_name)} - #{t(:signup)}"
    .content
      - form_for @user, :html => {:class => "form"} do |f|
        = f.error_messages

        .group
          = f.label :username, t(:username), :class => "label right"
          = f.text_field :username, :class => "text_field"
          .clear
          %span.description= t(:desc_username)
        .clear

        .group
          = f.label :email, t(:email), :class => "label right"
          = f.text_field :email, :class => "text_field"
          .clear
          %span.description= t(:desc_email)
        .clear

        .group
          = f.label :password, t(:password), :class => "label right"
          = f.password_field :password, :class => "text_field"
          .clear
          %span.description= t(:desc_password)
        .clear

        .group
          = f.label :password_confirmation, t(:password_confirmation), :class => "label right"
          = f.password_field :password_confirmation, :class => "text_field"
          .clear
          %span.description= t(:desc_password_confirm)
        .clear

        .group
          .left
            :erb
              <button class="button" type="submit"><%= image_tag('buttons/tick.png') %><%= t(:signup) %></button>
          .right
            %p
              = t(:have_account)
              = link_to t(:login), login_path
          .clear




